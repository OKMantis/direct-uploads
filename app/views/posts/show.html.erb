<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<% if @post.files.attached? %>
<p>
  <strong>Images:</strong>
  <br>
  <% @post.files.each do |image| %>
    <%= image_tag(image.variant(resize: "400x400")) %>
  <% end %>
</p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
